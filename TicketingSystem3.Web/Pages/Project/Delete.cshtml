@page
@model TicketingSystem3.Web.Pages.Project.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center alert-info">
    <div>
        <h1>Delete Project</h1>
        <h3>Are you sure you want to delete this?</h3>
    </div>
</div>

<div class="container alert-info">
    <dl class="row">
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Description)
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.User.UserName)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Modified On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ModifiedOn)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Project.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
