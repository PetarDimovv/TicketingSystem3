@page
@model TicketingSystem3.Web.Pages.Project.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div>
        <h1>Projects</h1>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="bg-secondary bg-opacity-10 py-2">
        <div calss="container">
            <a asp-page="Create">Create New</a>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Project)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                        <a asp-page="/Ticket/Create" asp-route-id="@item.Id" class="btn btn-primary">Create Ticket</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-page="/Ticket/Create" asp-route-id="@item.Id" class="btn btn-primary">Create Ticket</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
