@page
@model TicketingSystem3.Web.Pages.Admin.DeleteUserModel
@{
    ViewData["Title"] = "DeleteUser";
}

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Deleting this data will permanently remove the account, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <input type="hidden" asp-for="PassedId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data for account!</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
