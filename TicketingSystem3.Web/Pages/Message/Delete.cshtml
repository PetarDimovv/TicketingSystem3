@page
@model TicketingSystem3.Web.Pages.Message.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center alert-info">
    <div>
        <h1>Delete Message</h1>
        <h3>Are you sure you want to delete this?</h3>
    </div>
</div>

<div class="container text-center alert-info">
    <dl class="row">
        <dt class="col-sm-2">
            Publication Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.User.UserName)
        </dd>
        <dt class="col-sm-2">
            Ticket
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Ticket.Id)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Status)
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Content)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Modified On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.ModifiedOn)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Message.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
