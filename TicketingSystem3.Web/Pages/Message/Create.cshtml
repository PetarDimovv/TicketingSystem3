@page
@model TicketingSystem3.Web.Pages.Message.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container text-center alert-info">
    <div>
        <h1>Create Message</h1>
    </div>
</div>

<div class="container alert-info">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PassedId" />
            <div class="mb-3">
                <label for="message" class="control-label">Content</label>
                <input type="text" class="form-control" id="content" asp-for="CreateMessageRequest.Content" />
            </div>
            <div class="mb-3">
                <label asp-for="CreateMessageRequest.Status" class="control-label"></label>
                <select asp-for="CreateMessageRequest.Status" class="form-control">
                    <option value="0">Draft</option>
                    <option value="1">Published</option>
                </select>
                <span asp-validation-for="Message.Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CreateMessageRequest.PublicationDate" class="control-label"></label>
                <input asp-for="CreateMessageRequest.PublicationDate" class="form-control" />
                <span asp-validation-for="Message.PublicationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
