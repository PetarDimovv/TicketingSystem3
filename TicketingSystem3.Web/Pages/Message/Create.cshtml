@page
@model TicketingSystem3.Web.Pages.Message.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.PublicationDate" class="control-label"></label>
                <input asp-for="Message.PublicationDate" class="form-control" />
                <span asp-validation-for="Message.PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.UserId" class="control-label"></label>
                <select asp-for="Message.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.TicketId" class="control-label"></label>
                <select asp-for="Message.TicketId" class ="form-control" asp-items="ViewBag.TicketId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.Status" class="control-label"></label>
                <select 
                    asp-for="Message.Status" class="form-control">
                        <option value="0">Draft</option>
                        <option value="1">Published</option>
                </select>
                <span asp-validation-for="Message.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.CreatedOn" class="control-label"></label>
                <input asp-for="Message.CreatedOn" class="form-control" />
                <span asp-validation-for="Message.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.ModifiedOn" class="control-label"></label>
                <input asp-for="Message.ModifiedOn" class="form-control" />
                <span asp-validation-for="Message.ModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
